 "properties": {
  "displayName": "MAFR Inherit Tag Budget",
  "policyType": "Custom",
  "mode": "Indexed",
  "metadata": {
   "category": "Tags",
   "createdBy": "d0a5197e-7a46-4fb9-a6f4-0b51a6c9526d",
   "createdOn": "2021-02-14T16:57:14.9677908Z",
